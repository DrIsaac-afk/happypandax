/*******************************
         Site Overrides
*******************************/

@color_1: @green;
@color_2: @orange;
@color_3: @blue;
@color_4: @violet;
@color_5: @red;
@font_family_1: 'happypandax';

@import (inline) "s-alert.css";
@import "slick.less";
@import "slick-theme.less";
@import "roboto.less";
/*i.large.icon, i.large.icons {
    font-size: 1.1em;
}*/
@font-face {
    font-family: 'happypandax';
    src: url('../font/happypandax.eot');
    src: url('../font/happypandax.eot?#iefix') format('embedded-opentype'), url('../font/happypandax.woff') format('woff'), url('../font/happypandax.ttf') format('truetype'), url('../font/happypandax.svg#happypandax') format('svg');
    font-weight: normal;
    font-style: normal;
}
* {
    min-height: 0;
    min-width: 0;
}
.window-height {
    max-height: 100vh !important;
}
.main-content {
    min-height: 100vh !important;
}
.ui.vertical.menu {
    .item {
        >i.icon.left {
            float: none;
            margin: 0em 0.35714286em 0em 0em;
        }
    }
}
.flex-container {
    display: flex;
    justify-content: space-between;
    height: 100%;
    flex-direction: column;
}
.top-aligned {
    margin: 0px;
    margin-bottom: auto;
}
.middle-aligned {
    margin: 0px;
    margin-top: auto;
    margin-bottom: auto;
}
.bottom-aligned {
    margin: 0px;
    margin-top: auto;
}
i.medium-size {
    font-size: 1.1em !important;
}
.json-string {
    color: @color_1;
}
.json-number {
    color: @color_2;
}
.json-boolean {
    color: @color_3;
}
.json-null {
    color: @color_4;
}
.json-key {
    color: @color_5;
}
.right:not(.icon) {
    float: right;
}
.left:not(.icon) {
    float: left;
}
.text-ellipsis {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    text-align: center;
}
.card-content {
    position: relative;
}
.card-header {
    font-size: 1rem !important;
}
.card-item {
    position: absolute !important;
    margin: 0.25rem !important;
}
.card-item.right {
    right: 0;
}
.card-item.bottom {
    bottom: 0;
}
.card-item.left {
    left: 0;
}
.card-item.top {
    top: 0;
}
.fullwidth {
    width: 100%;
}
.fullheight {
    height: 100% !important;
}
.min-fullheight {
    height: 100% !important;
}
.slide-next {
    top: 50%;
    position: absolute;
    transform: translate(0,-50%);
    z-index: 3;
}
.slide-next.right {
    right: 0;
}
.slide-next.left {
    left: 0;
}
.slick-dots {
    bottom: 0 !important;
    position: relative !important;
}
.slick-list {
    padding: 5px !important;
}
.no-padding-segment {
    padding: 0 !important;
}
.overflow-auto {
    overflow: auto !important;
}
.no-margins, .slide-segment {
    margin: 0 !important;
}

[class*='hpx-'] {
    &:before {
        display: inline-block;
        font-family: @font_family_1;
        font-style: normal;
        font-weight: normal;
        line-height: 1;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }
}
.hpx-standard {
    &:before {
        content: '\0041';
    }
}
.hpx-alternative {
    &:before {
        content: '\0042';
    }
}
.hpx-other {
    &:before {
        content: '\0043';
    }
}
i.huge.icon {
    font-size: 3em;
}
i.huge.icons {
    font-size: 3em;
}

 .slick-slider .card.small-size {
    max-width: 145px !important;
}

@media screen and (min-width: 1000px) {
    .card.medium-size {
        max-width: 200px !important;
    }
}

h6 {
    font-style: italic;
    font-size: 1.0rem;
}

.sub-text {
    font-size: 1rem !important;
    color: rgba(0,0,0,.4) !important;
}

.above-dimmer{
    z-index: 10 !important;
}

.reader-fitwidth-stretch {
    width: 100%;
    height: auto;
}

.reader-fitheight-stretch {
    height: 100vh !important;
    width: auto !important;
}

.reader-fitwidth {
    max-width: 100% !important;
    height: auto !important;
}

.reader-fitheight {
    max-height: 100vh !important;
    width: auto !important;
}

/*--------------
      Card
---------------*/

.ui.cards > .default-card,
.ui.default-card {
    border: 1px solid rgba(34,36,38,.1) !important;
    background: @white !important;
}

/*--------------
     Card Content
---------------*/

.ui.cards > .default-card > .content,
.ui.default-card > .content {
  padding: 1em 1em !important;
}

.ui.card.piled.segments::after, .ui.card.piled.segments::before, .ui.card.piled.segment::after, .ui.card.piled.segment::before {
    background-color: unset !important;
}

.foreground-sticky > div {
    z-index: 99999;
}

.blur {
    filter: blur(4px);
}

.blur:hover {
    filter: unset;
}
